@model IEnumerable<PosWebAppCommon.Models.Employee>
@{
    ViewData["Title"] = "Payroll Management";
}

<div class="container mt-4">
    <h2 class="mb-4">Payroll Management</h2>
    <a asp-action="Create" class="btn btn-primary mb-3"><i class="fas fa-user-plus me-2"></i>Add New Employee</a>
    <div class="card shadow-sm">
        <div class="card-header">
            <h4>Employee List</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Position</th>
                            <th>Salary</th>
                            <th>Is Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.Position</td>
                                <td>@employee.Salary.ToString("C")</td>
                                <td>
                                    <span class="badge @(employee.IsActive ? "bg-success" : "bg-danger")">
                                        @(employee.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                        <form asp-action="Delete" asp-route-id="@employee.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this employee?');" class="d-inline-block">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                        <a asp-action="PaycheckHistory" asp-route-employeeId="@employee.Id" class="btn btn-sm btn-info"><i class="fas fa-receipt"></i></a>
                                        <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#paycheckModal_@employee.Id"><i class="fas fa-money-check-alt"></i></button>
                                    </div>
                                </td>
                            </tr>

                            <div class="modal fade" id="paycheckModal_@employee.Id" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="CalculatePaycheck" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Calculate Paycheck for @employee.FirstName</h5>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="employeeId" value="@employee.Id" />
                                                <p>This will calculate a standard paycheck based on their salary.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-success">Calculate</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>