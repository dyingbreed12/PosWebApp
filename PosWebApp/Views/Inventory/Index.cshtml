@model IEnumerable<PosWebAppCommon.Models.Item>
@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container mt-4">
    <h2 class="mb-4">Inventory Management</h2>
    <a asp-action="Create" class="btn btn-primary mb-3"><i class="fas fa-plus-circle me-2"></i>Add New Item</a>
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>SKU</th>
                            <th>Quantity</th>
                            <th>Selling Price</th>
                            <th>Cost Price</th>
                            <th>Reorder Level</th>
                            <th>Is Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ItemName</td>
                                <td>@item.SKU</td>
                                <td>@item.Quantity</td>
                                <td>@item.SellingPrice.ToString("C")</td>
                                <td>@item.CostPrice.ToString("C")</td>
                                <td>@item.ReorderLevel</td>
                                <td>
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline-block">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>