@using PosWebAppCommon.DTOs
@model IEnumerable<SalesHistoryReportDto>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Sales History Report</h1>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Cashier</th>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TransactionDate.ToShortDateString()</td>
                    <td>@item.Cashier</td>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>$@item.ItemPrice.ToString("N2")</td>
                    <td>$@item.TotalAmount.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>