@model PosWebApp.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/materia/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Added p-0 and m-0 to the main container */
        .login-page-container {
            height: 100vh;
        }

        .banner-section {
            position: relative;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .banner-section img.banner-image {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: brightness(50%);
            }

        .banner-content {
            position: relative;
            z-index: 1;
            color: white;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.9);
            padding: 2rem;
        }

            .banner-content .display-4 {
                font-size: 3.5rem;
            }

            .banner-content .lead {
                font-size: 1.5rem;
            }

        .login-form-section {
            background-color: var(--bs-body-bg);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 3rem;
            height: 100%;
        }

        .form-control:focus {
            box-shadow: 0 0 0 .25rem rgba(13, 110, 253, .25);
            border-color: #0d6efd;
        }

        .btn-lg {
            padding: 0.75rem 1.25rem;
        }

        /* Adjustments for smaller screens */
        @@media (max-width: 767.98px) {
            .banner-section {
                height: 40vh;
            }

            .login-form-section {
                height: 60vh;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid login-page-container p-0 m-0">
        <div class="row g-0 h-100">
            <div class="col-md-7 banner-section">
                <img src="~/images/banner.jpg" alt="Modern payment terminal and customer" class="banner-image">
                <div class="banner-content">
                    <h1 class="display-4 fw-bold mb-3">Accelerate Your Sales. Optimize Your Business.</h1>
                    <p class="lead mb-4">
                        The ultimate Point of Sale solution designed for speed and precision.
                    </p>
                    <p class="fs-5">Seamless transactions, powerful insights, guaranteed growth.</p>
                </div>
            </div>

            <div class="col-md-5 login-form-section">
                <div class="w-100" style="max-width: 400px;">
                    <h2 class="h3 mb-4 fw-normal text-center">Login to Your Account</h2>
                    <form asp-action="Login" method="post" novalidate class="needs-validation">
                        <div class="form-floating mb-3">
                            <input asp-for="Username" type="text" class="form-control" id="floatingUsername" placeholder="Username" required />
                            <label for="floatingUsername">Username</label>
                            <span asp-validation-for="Username" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required />
                            <label for="floatingPassword">Password</label>
                            <span asp-validation-for="Password" class="text-danger mt-1 d-block"></span>
                        </div>
                        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                        {
                            <div class="alert alert-danger mb-3" role="alert">
                                @ViewData["ErrorMessage"]
                            </div>
                        }
                        <button class="btn btn-primary btn-lg w-100" type="submit">Login</button>
                        <p class="mt-5 mb-3 text-muted text-center">&copy; @DateTime.Now.Year POS App</p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>