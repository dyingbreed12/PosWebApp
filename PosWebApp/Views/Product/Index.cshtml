@model IEnumerable<PosWebAppCommon.Models.Product>

<h2>Product Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<div class="table-responsive">
    <table class="table table-striped mt-2">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ItemId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ItemId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>