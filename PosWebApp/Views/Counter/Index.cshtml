@{
    var cart = (List<PosWebAppCommon.Models.Product>)ViewBag.Cart;
    var total = cart.Sum(p => p.Price * p.Quantity);
}
<h2>Cashier Counter</h2>

<form asp-controller="Counter" asp-action="AddToCart" method="post">
    <div class="form-group">
        <label for="itemName">Item Name</label>
        <input type="text" id="itemName" name="itemName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add to Cart</button>
</form>

<h3 class="mt-4">Current Transaction</h3>
<table class="table mt-2">
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @if (cart != null && cart.Any())
        {
            @foreach (var item in cart)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price* item.Quantity).ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No items in the cart.</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="mt-4">Total: @total.ToString("C")</h4>

<form asp-controller="Counter" asp-action="CompleteTransaction" method="post" class="mt-4">
    <button type="submit" class="btn btn-success">Complete Transaction</button>
</form>