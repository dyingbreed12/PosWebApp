<div class="row">
    <div class="col-md-8">
        <h2>POS Counter</h2>
        <form id="addToCartForm">
            <div class="input-group mb-3">
                <input type="text" id="skuInput" class="form-control" placeholder="Scan or enter item SKU" autofocus />
                <button class="btn btn-primary" type="submit">Add Item</button>
            </div>
        </form>
        <div class="mt-4">
            <h4>Current Cart</h4>
            <table id="cartTable" class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <strong>Total:</strong>
                <strong id="totalAmountDisplay">$0.00</strong>
            </div>
            <button id="completeTransactionBtn" class="btn btn-success mt-3">Complete Transaction</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/sales.js" asp-append-version="true"></script>
}